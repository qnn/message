<h1><%= t("messages.listing") %></h1>

<table>
  <tr>
    <th><%= t("messages.name") %></th>
    <th><%= t("messages.title") %></th>
    <th><%= t("messages.content") %></th>
    <th><%= t("messages.created_at") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.name %></td>
    <td><%= message.title %></td>
    <td><%= truncate message.content, :length => 50 %> <%= link_to t("messages.show"), message %></td>
    <td><%= message.created_at %></td>
    <td></td>
    <td><%= link_to t("messages.edit"), edit_message_path(message) %></td>
    <td><%= link_to t("messages.delete"), message, method: :delete, data: { confirm: t("messages.delete_confirm") } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t("messages.new"), new_message_path %>
